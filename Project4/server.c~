/********************************************************************
 * Includes
 *******************************************************************/
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <sys/stat.h>
#include <dirent.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>
#include <limits.h>
#include "util.h"
#include "p_queue.h"


#define PDAG (*dag)

/********************************************************************
 * Structures
 *******************************************************************/
struct candidates{
  int num_candidates;
  int max_candidates;
  char **names;
  int *votes;
};

typedef struct dag{
    struct dag *parent;
    char *name;
    char *dir;
    int num_child;
    int index;
    struct dag **child;
  struct candidates candidates;
    pthread_mutex_t mutex;
}dag_t, *dag_pt;

